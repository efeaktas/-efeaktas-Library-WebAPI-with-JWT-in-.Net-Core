
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-5"></div>
                <div class="col-md-2">

                </div>
                <div class="col-md-5">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Kitap Yönetimi</a></li>
                        <li class="breadcrumb-item active">Kitap Oluştur</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Kitap Oluştur</h3>
                    </div>
                    <form id="bookForm" method="post" enctype="multipart/form-data">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Kitap İsmi</label>
                                <input type="text" class="form-control" id="txtBookName" required>
                            </div>
                            <div class="form-group">
                                <label>Yazar İsmi</label>
                                <select id="selectAuthor" class="form-control select2" style="width: 100%;" required>

                                   

                                </select>
                            </div>
                            <div class="form-group">
                                <label>Tür İsmi</label>
                                <select id="selectType" class="form-control select2" style="width: 100%;" required>

                                   

                                </select>
                            </div>

                        </div>
                        <div class="card-footer">
                            <div class="row">

                                <div class="col-12">
                                    <a href="/Book/List" class="btn btn-secondary" style="background-color:red !important;border-color:red !important;">İptal Et</a>
                                    <input type="submit" value="Oluştur" class="btn btn-success float-right">
                                </div>

                            </div>
                        </div>
                    </form> <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="col-md-2">

                <!-- /.card -->
            </div>
        </div>

    </section>
    <!-- /.content -->


</section>
@section JS{
    <script src="~/js/CustomScripts/Book/createBook.js"></script>
}

